{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "commonjs": true,
    "browser": true,
    "node": true,
    "jquery": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "plugins": ["babel"],
  "rules": {
    "no-console": 1,
    "no-debugger": 1,
    "no-unused-vars": 1,
    "new-cap": 0,
    "no-invalid-this": 0,
    "object-curly-spacing": 0,
    "quotes": 0,
    "semi": 0,
    "babel/new-cap": 1,
    "babel/no-invalid-this": 1,
    "babel/object-curly-spacing": [1, "always"],
    "babel/quotes": [2, "single", { "allowTemplateLiterals": true }],
    "babel/semi": 2,
    "import/order": [1,
      {"groups": [
        "builtin",
        "external",
        "internal",
        "parent",
        "sibling",
        "index"
      ]}
    ],
    "import/newline-after-import": 1,
    "react/boolean-prop-naming": 1,
    "react/no-array-index-key": 1,
    "react/no-unused-prop-types": 1,
    "react/no-unused-state": 1
  },
  "settings": {
    "react": {
      "version": "16.4"
    }
  }
}
